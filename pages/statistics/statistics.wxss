.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.stats-header {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.total-stats {
  display: flex;
  justify-content: space-around;
}

.stat-card {
  text-align: center;
}

.stat-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.stat-value {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
  display: block;
}

.daily-stats {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  font-weight: bold;
}

.daily-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.daily-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.date {
  width: 160rpx;
  font-size: 26rpx;
  color: #666;
}

.bar-container {
  flex: 1;
  height: 30rpx;
  background-color: #f0f0f0;
  border-radius: 15rpx;
  overflow: hidden;
}

.bar {
  height: 100%;
  background-color: #ff4d4f;
  border-radius: 15rpx;
  transition: width 0.3s ease;
}

.count {
  width: 80rpx;
  font-size: 26rpx;
  color: #666;
  text-align: right;
}