.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.settings-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.settings-section {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.settings-section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  font-weight: bold;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.setting-slider {
  flex: 1;
  margin-left: 40rpx;
}

switch {
  transform: scale(0.9);
}